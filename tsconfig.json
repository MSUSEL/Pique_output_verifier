{
  "compilerOptions": {
    "target": "ES2020",
    // a good idea to include the matching libraries
    "lib": [
      "ES2020",
      "DOM"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["src"]
}
